@using Cyrena.Components.Shared

<EditForm EditContext="_context">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Project Name</label>
        <InputText @bind-Value="Model.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Project Description</label>
        <InputTextArea @bind-Value="Model.Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Root Directory</label>
        <div class="input-group">
            <InputText @bind-Value="Model.RootDirectory" class="form-control" />
            <button class="btn btn-outline-secondary" type="button" @onclick="PickProject"><i class="bi bi-folder-symlink"></i></button>
        </div>
    </div>

    <ConnectionSelector @bind-Value="Model.ConnectionId" />
</EditForm>