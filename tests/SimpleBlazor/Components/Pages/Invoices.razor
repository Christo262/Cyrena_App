@using SimpleBlazor.Models
@using SimpleBlazor.Contracts
@inject IInvoiceService InvoiceService
@inject NavigationManager Nav

<h3>Invoices</h3>

<button class="btn btn-primary" @onclick="@(() => Nav.NavigateTo($"/invoices/edit"))">Add Invoice</button>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Client</th>
            <th>Date</th>
            <th>Due</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (invoices != null)
        {
            foreach (var inv in invoices)
            {
                <tr>
                    <td>@inv.ClientId</td>
                    <td>@inv.Date.ToShortDateString()</td>
                    <td>@inv.DueDate.ToShortDateString()</td>
                    <td>@inv.Amount:C</td>
                    <td>
                        <button class="btn btn-sm btn-secondary" @onclick="@(() => Nav.NavigateTo($"/invoices/edit/{inv.Id}"))">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(inv.Id)">Delete</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    private IEnumerable<Invoice>? invoices;

    protected override async Task OnInitializedAsync()
    {
        invoices = await InvoiceService.GetAllAsync();
    }

    private async Task Delete(Guid id)
    {
        await InvoiceService.DeleteAsync(id);
        invoices = await InvoiceService.GetAllAsync();
    }
}
