@namespace BlazorLibrary.Components.Shared

@using Microsoft.AspNetCore.Components

<div class="card counter-card">
    <div class="card-body">
        <h5 class="card-title">@Title</h5>
        <p class="card-text display-4">@Count</p>
        @if (!string.IsNullOrWhiteSpace(LinkUrl))
        {
            <a href="@LinkUrl" class="btn btn-primary">@LinkText</a>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Counter";
    [Parameter] public int Count { get; set; }
    [Parameter] public string LinkUrl { get; set; }
    [Parameter] public string LinkText { get; set; } = "Go";
}
